<%- include("./partials/header") %>
<div class="fluid-container p-4">
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Todo App</a>
  </nav>

  <div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex mx-2">
      <input
        type="text"
        class="form-control"
        placeholder="Enter Todo..."
        name="todo" />
      <input
        type="submit"
        value="Add Todo"
        class="btn btn-lg btn-primary mx-2" />
    </form>

    <ul class="list-group my-5 d-flex">
      <% Todo.forEach(todos => { %>
      <li
        class="list-group-item d-flex justify-content-between align-items-center">
        <p class="p-2"><%= todos.todo %></p>
        <button class="btn btn-sm">
          <a href="/delete/todo/<%= todos._id %>" class="p-2 btn btn-danger"
            >Delete</a
          >
        </button>
      </li>

      <% }) %>
    </ul>
  </div>
</div>
